<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="asee.unex.es.pizzeriamilenio.Clases.IniciarSesion"
    android:background="#cfcf3030">


    <LinearLayout
        android:layout_width="414dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingTop="20dp"
        android:layout_height="149dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            app:srcCompat="@drawable/icono" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:paddingTop="90dp">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#8b5a6b"
                android:paddingLeft="3dp">

                <AutoCompleteTextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:background="@drawable/edit_text_style"
                    android:textColorLink="?attr/actionMenuTextColor"
                    android:textColorHint="@color/accent"
                    android:textColor="@android:color/background_dark"
                    android:textColorHighlight="@android:color/background_dark"
                    android:textCursorDrawable="@android:color/background_dark"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/colorButton"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/prompt_password"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@drawable/edit_text_style"
                    android:textColor="@android:color/background_dark"
                    android:textColorHighlight="@android:color/background_dark"
                    android:textColorHint="@color/colorButton"
                    android:textColorLink="@color/colorButton"
                    android:paddingLeft="5dp" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/buttonEntrar"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/action_entrar"
                android:textColor="#ffffff"
                android:backgroundTint="@color/colorButton"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonRegistrarse"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/action_registrarse"
                android:textColor="#ffffff"
                android:backgroundTint="@color/colorButton"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
